{
  "name": "ask-question-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "description": "Frontend портала вопросов и ответов",
  "author": "Григорий Алексанян",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prettier:check": "prettier ./src",
    "eslint:check": "eslint ./src/**/*.{vue,js}",
    "stylelint:check": "stylelint ./src/**/*.{vue,scss,css}",
    "lint": "npm run prettier:check && npm run eslint:check && npm run stylelint:check",
    "husky:prepare": "husky || true",
    "commit": "git-cz"
  },
  "dependencies": {
    "@vee-validate/rules": "^4.13.2",
    "axios": "^1.7.4",
    "dompurify": "^3.1.6",
    "vee-validate": "^4.13.2",
    "vue": "^3.4.38",
    "vue-responsive-video-background-player": "^2.3.1",
    "vue-router": "^4.4.3",
    "vuedraggable": "^4.1.0",
    "vuetify": "^3.7.0",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@mdi/font": "^7.4.47",
    "@vitejs/plugin-vue": "^5.0.4",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.21.1",
    "eslint-plugin-vuetify": "^2.2.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.5",
    "sass": "~1.32",
    "stylelint": "^16.2.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "vite": "^5.4.1",
    "vite-plugin-vuetify": "^2.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./configs/git/commitizen.cjs"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.vue": [
      "npm run prettier:check",
      "npm run eslint:check",
      "npm run stylelint:check"
    ],
    "*.{css,scss}": [
      "npm run prettier:check",
      "npm run stylelint:check"
    ]
  }
}
