{
  "name": "ask-question-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "description": "Frontend портала вопросов и ответов",
  "author": "Григорий Алексанян",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prettier:check": "prettier ./src --check",
    "eslint:check": "eslint ./src/**/*.{vue,js}",
    "stylelint:check": "stylelint ./src/**/*.{vue,scss,css}",
    "lint": "npm run prettier:check && npm run eslint:check && npm run stylelint:check",
    "husky:prepare": "husky || true",
    "commit": "git-cz"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "dompurify": "^3.0.9",
    "tiptap-vuetify": "^2.24.0",
    "vee-validate": "^3.4.15",
    "vue": "^2.7.16",
    "vue-responsive-video-background-player": "^1.3.1",
    "vue-router": "^3.6.5",
    "vuedraggable": "^2.24.3",
    "vuetify": "^2.7.2",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@mdi/font": "^7.4.47",
    "@vitejs/plugin-vue2": "^2.3.1",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.21.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.5",
    "sass": "~1.32",
    "stylelint": "^16.2.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./configs/git/commitizen.cjs"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.vue": [
      "npm run prettier:check",
      "npm run eslint:check",
      "npm run stylelint:check"
    ],
    "*.{css,scss}": [
      "npm run prettier:check",
      "npm run stylelint:check"
    ]
  }
}
