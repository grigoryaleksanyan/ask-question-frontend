{
  "name": "ask-question-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.17.0",
    "npm": ">=10.9.2"
  },
  "description": "Frontend портала вопросов и ответов",
  "author": "Григорий Алексанян",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prettier:check": "prettier ./src --check",
    "eslint:check": "eslint ./src/**/*.{vue,js}",
    "stylelint:check": "stylelint ./src/**/*.{vue,scss,css}",
    "lint": "npm run prettier:check && npm run eslint:check && npm run stylelint:check",
    "husky:prepare": "husky || true",
    "commit": "git-cz"
  },
  "dependencies": {
    "@vee-validate/rules": "^4.15.1",
    "axios": "^1.10.0",
    "dompurify": "^3.2.6",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.17",
    "vue-responsive-video-background-player": "^2.4.1",
    "vue-router": "^4.5.1",
    "vuedraggable": "^4.1.0",
    "vuetify": "^3.9.2",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@mdi/font": "^7.4.47",
    "@vitejs/plugin-vue": "^6.0.0",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.4.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^10.3.0",
    "eslint-plugin-vuetify": "^2.5.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "stylelint": "^16.22.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-recommended-scss": "^15.0.1",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.0",
    "vite": "^7.0.5",
    "vite-plugin-vuetify": "^2.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./configs/git/commitizen.cjs"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.vue": [
      "npm run prettier:check",
      "npm run eslint:check",
      "npm run stylelint:check"
    ],
    "*.{css,scss}": [
      "npm run prettier:check",
      "npm run stylelint:check"
    ]
  }
}
