{
  "name": "ask-question-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Frontend портала вопросов и ответов",
  "author": "Григорий Алексанян",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "prettier": "prettier --write ./**/*.{js,vue,css,scss}",
    "eslint": "eslint ./**/*.{js,vue} --color --fix",
    "stylelint:css": "stylelint ./src/**/*.{css,scss} --custom-syntax postcss-scss --aei --color --fix",
    "stylelint:vue": "stylelint ./src/**/*.vue --custom-syntax postcss-html --aei --color --fix",
    "lint": "npm run eslint & npm run stylelint:css & npm run stylelint:vue",
    "husky:prepare": "husky install",
    "commit": "git-cz"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "core-js": "^3.8.3",
    "vue": "^2.6.14",
    "vue-responsive-video-background-player": "^1.3.1",
    "vue-router": "^3.5.1",
    "vuetify": "^2.6.0",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.3.0",
    "@mdi/font": "^7.1.96",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-airbnb": "^7.0.0",
    "commitizen": "^4.2.4",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.8.0",
    "eslint-plugin-vuejs-accessibility": "^2.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.20",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "stylelint": "^14.16.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "vue-cli-plugin-vuetify": "^2.5.8",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./config/git/commitizen.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run eslint"
    ],
    "*.vue": [
      "npm run eslint",
      "npm run stylelint:vue"
    ],
    "*.{css,scss}": [
      "npm run stylelint:css"
    ]
  }
}
